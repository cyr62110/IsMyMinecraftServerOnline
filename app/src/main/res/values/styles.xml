<resources>

    <!-- Base application theme. -->
    <style name="Immso" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="onlineStatusColor">@android:color/holo_green_light</item>
        <item name="fullStatusColor">@android:color/holo_orange_light</item>
        <item name="offlineStatusColor">@android:color/holo_red_light</item>

        <item name="android:actionBarStyle">@style/Immso.ActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="Immso.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/applicationBaseColor</item>
    </style>

    <style name="Immso.Text" parent="android:TextAppearance.Holo"></style>

    <style name="Immso.Text.ServerName" parent="Immso.Text">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Immso.Text.ServerVersion" parent="Immso.Text">
        <item name="android:textSize">@dimen/textMicro</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Immso.Text.ServerAddress" parent="Immso.Text">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

</resources>
